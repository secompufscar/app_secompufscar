<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_fundo"
    tools:context="br.com.secompufscar.app.Patrocinadores">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_patrocinadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/sem_dados"
        layout="@layout/erro_sem_dados"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar android:id="@+id/loading_spinner_patrocinadores"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>